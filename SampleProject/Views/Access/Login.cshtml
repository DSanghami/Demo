@model SampleProject.Models.VMLogin;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            padding: 50px;
            text-align: center;
        }

        .login-form {
            max-width: 400px;
            margin: auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            color: #007bff;
        }

        label {
            margin-bottom: 0;
        }

        .btn-login {
            background-color: #007bff;
            color: #fff;
        }
    </style>
</head>
<body>
    <div class="login-form">
        <form asp-controller="Access" asp-action="Login" method="post">
            <h1>Login</h1>
            <div class="form-group">
                <input class="form-control" type="email" placeholder="Email" asp-for="Email" />
            </div>
            <div class="form-group">
                <input class="form-control" type="password" placeholder="Password" asp-for="Password" />
            </div>
            <div class="form-group form-check">
                <input class="form-check-input" type="checkbox" asp-for="KeepLoggedIn" />
                <label class="form-check-label">Keep me logged in</label>
            </div>
            <button class="btn btn-login" type="submit">Login</button>
            <a asp-controller="Access" asp-action="Register" class="btn btn-primary">Register</a>

            @if (ViewData["ValidateMessage"] != null)
            {
                <br />
                <br />
                <div class="alert alert-danger" role="alert">
                    @ViewData["ValidateMessage"]
                </div>
            }
        </form>
    </div>
</body>
</html>
